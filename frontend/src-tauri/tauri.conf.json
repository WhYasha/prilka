{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SimpleMessenger",
  "version": "0.1.0",
  "identifier": "rest.behappy.messenger",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Simple Messenger",
        "url": "https://behappy.rest",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' https://behappy.rest; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://behappy.rest; style-src 'self' 'unsafe-inline' https://behappy.rest; img-src 'self' https://behappy.rest https://behappy.rest/minio/ data:; connect-src 'self' https://behappy.rest wss://behappy.rest; font-src 'self' https://behappy.rest data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false
      }
    }
  }
}
